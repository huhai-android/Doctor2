<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_update"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grou_dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="选择记住密码后在特定时间内"
        android:textColor="@color/black"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="无需输入签名密码"
        android:textColor="@color/black"
       />

     <RadioGroup
         android:layout_marginTop="@dimen/dp_5"
         android:id="@+id/remember_group"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <RadioButton
             android:id="@+id/not_remember"
             android:text="不记住密码"
             android:textColor="#696969"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <RadioButton
             android:id="@+id/remember_one_day"
             android:textColor="#696969"
             android:text="记住一天"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <RadioButton
             android:id="@+id/remember_one_week"
             android:textColor="#696969"
             android:text="记住一周"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <RadioButton
             android:id="@+id/remember_tow_month"
             android:textColor="#696969"
             android:text="记住60天"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
     </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/font_gray_3" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/theme"
        android:textSize="16sp" />

</LinearLayout>



