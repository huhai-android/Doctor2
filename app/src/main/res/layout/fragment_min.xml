<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <include
        layout="@layout/layout_titlebar"
        android:visibility="gone" />

    <com.ajguan.library.EasyRefreshLayout

        android:id="@+id/easylayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <android.support.v4.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <!--头像布局-->
                    <LinearLayout
                        android:id="@+id/ll_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_35">
                            <ImageView
                                android:src="@mipmap/icon_shezhi"
                                android:id="@+id/image_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_20"
                                android:layout_toLeftOf="@id/image_kefu"
                                />
                            <ImageView
                                android:id="@+id/image_kefu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_20"

                                android:src="@mipmap/icon_kefu"
                                />



                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:layout_marginLeft="@dimen/dp_15">

                                <com.newdjk.doctor.views.CircleImageView
                                    android:id="@+id/civImg"
                                    android:layout_width="68dp"
                                    android:layout_height="68dp"
                                    android:src="@drawable/doctor_default_img" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/tvName"
                                            style="@style/text_middle_white"
                                            android:layout_centerVertical="true"
                                            android:layout_gravity="center_vertical"
                                            android:layout_toRightOf="@id/civImg"
                                            android:gravity="center_vertical"
                                            android:textColor="#ff333333"
                                            android:textSize="18sp"
                                            android:textStyle="bold"
                                            tools:text="张三" />


                                        <TextView
                                            android:id="@+id/tv_authentication"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/dp_5"
                                            android:layout_toRightOf="@id/tvName"
                                            android:background="@drawable/authentication_bg"
                                            android:paddingBottom="@dimen/dp_1"
                                            android:paddingLeft="@dimen/dp_5"
                                            android:paddingRight="@dimen/dp_5"
                                            android:paddingTop="@dimen/dp_1"
                                            android:text="未认证"
                                            android:textColor="#3A66FF"
                                            android:textSize="@dimen/sp_10" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_10">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right|center_vertical"
                                            android:drawablePadding="@dimen/dp_5"
                                            android:text="问诊量："
                                            android:textColor="@color/text_gray1"
                                            android:textSize="@dimen/sp_12" />

                                        <TextView
                                            android:id="@+id/seeing"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right|center_vertical"
                                            android:drawablePadding="@dimen/dp_5"
                                            android:textColor="@color/shiHuangSe"
                                            android:textSize="@dimen/sp_12"
                                            tools:text="100" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="left|center_vertical"
                                            android:layout_marginLeft="@dimen/dp_20"
                                            android:drawablePadding="@dimen/dp_5"
                                            android:text="关注量："
                                            android:textColor="@color/text_gray1"
                                            android:textSize="@dimen/sp_12" />

                                        <TextView
                                            android:id="@+id/amount_of_attention"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="left|center_vertical"
                                            android:drawablePadding="@dimen/dp_5"
                                            android:textColor="@color/shiHuangSe"
                                            android:textSize="@dimen/sp_12"
                                            tools:text="100" />
                                    </LinearLayout>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_10"
                                        android:text="预览我的主页"
                                        android:textColor="@color/colorPrimary"
                                        android:visibility="gone" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_30"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="gone">


                                <TextView
                                    android:id="@+id/title"
                                    style="@style/text_middle_white"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:gravity="center_horizontal"
                                    android:text="--"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                            <FrameLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_15">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_72"
                                    android:background="@mipmap/me_bg"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/doctor_score_layout"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/doctor_score"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/tv_point"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="我的评价"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/doctor_income_layout"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/doctor_income"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:lines="1"
                                            android:text="****"
                                            android:textColor="@color/white"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/tv_total_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="我的收入"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/total_patient_layout"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <TextView
                                            android:id="@+id/total_patient"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/tv_refuse_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="总患者"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/mypoint"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">


                                        <TextView
                                            android:id="@+id/tv_jifen"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="18sp" />


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="我的积分"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </FrameLayout>


                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"

                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/all_reports"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="#ffa416"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="我的记录"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <com.newdjk.doctor.views.DrawableTextView
                            style="@style/tv_default"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:drawablePadding="@dimen/dp_8"
                            android:drawableRight="@mipmap/left_icon"
                            android:minHeight="@dimen/dp_35"
                            android:text="@string/all_order"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:drawableHeights="16dp"
                            app:drawableWidths="16dp" />

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/mFunContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:visibility="gone">


                        <TextView
                            android:id="@+id/my_chufang"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_wodechufang"
                            android:gravity="center"
                            android:text="我的处方"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/my_youxuantuijian"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_youxuantuijiana"
                            android:gravity="center"
                            android:text="优选推荐"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/my_jianchadan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_wode_jianchadan"
                            android:gravity="center"
                            android:text="我的检查单"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/picture_record"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/tuwen"
                            android:gravity="center"
                            android:text="图文记录"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/yuanchenghuli"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/yuancheng"
                            android:gravity="center"
                            android:text="远程护理记录"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/renewal_record"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/xufang"
                            android:gravity="center"
                            android:text="续方记录"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/mShenfangRecode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/fuwubao"
                            android:gravity="center"
                            android:text="审方记录"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout

                        android:id="@+id/mVideoContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/my_wenzhen"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_wenzhenjilu"
                            android:gravity="center"
                            android:text="问诊记录"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView

                            android:id="@+id/mdiagnoseRecord"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/dier"
                            android:gravity="center"
                            android:text="第二诊疗意见"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/my_mianzhenyuyue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_mianzhenyuyuejilu"
                            android:gravity="center"
                            android:text="面诊预约记录"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/video_record"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/shipin"
                            android:gravity="center"
                            android:text="面诊预约记录"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/mServiceRecord"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_wenzhenjilu"
                            android:gravity="center"
                            android:text="服务包记录"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/mianzhen_record"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@drawable/mianzhenrecode"
                            android:gravity="center"
                            android:text="面诊预约记录"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="@dimen/dp_0"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>


                <!--我的订单-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/shape_home"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginLeft="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="我的订单"
                            android:textColor="#ff333333"
                            android:textSize="17sp" />

                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyleview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

                <!--我的工具-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:background="@drawable/shape_home"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginLeft="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="常用工具"
                            android:textColor="#ff333333"
                            android:textSize="17sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/open_service"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_kaitongfuwu"
                            android:gravity="center"
                            android:text="开通服务"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/dianzi_sign"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_dianziqianming"
                            android:gravity="center"
                            android:text="电子签名"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/offer_medical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_gongyaodanwei"
                            android:gravity="center"
                            android:text="供药单位"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/invite_doctor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_yaoqingyihu"
                            android:gravity="center"
                            android:text="邀请医护"
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/empty4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_yaoqingyihu"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/empty5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableTop="@mipmap/icon_yaoqingyihu"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/font_gray_4"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <com.youth.banner.Banner
                        android:id="@+id/mBanner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginBottom="@dimen/dp_6"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10">


                    </com.youth.banner.Banner>

                    <com.newdjk.doctor.views.ItemView
                        android:id="@+id/mPoints"
                        android:layout_width="match_parent"
