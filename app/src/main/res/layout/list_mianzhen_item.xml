<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consult_message_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <!--   <com.newdjk.doctor.views.CircleImageView
           android:id="@+id/avatar"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:src="@drawable/head_deafult" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            android:gravity="center_vertical">

            <TextView
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="05月28号xxxxxxx"
                android:textColor="#FF333333"
                android:textSize="14sp" />

            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_time"
                android:id="@+id/tv_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="星期四"
                android:textColor="#FF333333"
                android:textSize="14sp" />

            <TextView
                android:layout_toLeftOf="@id/tv_desc"
                android:layout_centerVertical="true"
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#FF2C66D3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|right"
                android:layout_toLeftOf="@id/im_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="已预约问诊人数"
                android:textColor="#FF666666"
                android:textSize="12sp" />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/im_arrow"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@mipmap/decline" />

        </RelativeLayout>


        <View
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/mianzhenline"></View>


        <android.support.v7.widget.RecyclerView

            android:id="@+id/recyleviewitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>
