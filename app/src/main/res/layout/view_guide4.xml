<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"

    >

    <!--    <ImageView
            android:src="@drawable/bg_lead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>-->
    <TextView
        android:id="@+id/jump_step"
        android:layout_marginTop="22dp"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:background="@drawable/about_tiaoguo"
        android:text="跳过"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:paddingTop="@dimen/dp_17"
        android:paddingBottom="@dimen/dp_17"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center"
        android:textSize="15sp"
      android:layout_alignParentRight="true"
        android:id="@+id/tv_button"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@drawable/but_biankuangyou"
        android:text="点击此处可查看其他功能操作指引"></TextView>
    <TextView
        android:background="@drawable/but_biankuang"
        android:id="@+id/next_step"
        android:layout_marginBottom="58dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/dp_26"
        android:paddingTop="9dp"
        android:paddingRight="@dimen/dp_26"
        android:paddingBottom="9dp"
        android:text="下一步"
        android:textColor="#ffffffff"
        android:textSize="22sp" />
</RelativeLayout>