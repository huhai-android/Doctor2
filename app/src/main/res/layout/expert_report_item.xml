<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.newdjk.doctor.views.CircleImageView
                android:id="@+id/civImg"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/doctor_default_img" />



            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout

                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   >

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:visibility="visible"
                        tools:text="刘付" />


                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:background="@color/black"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_10"></View>

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/tv_expert"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:visibility="visible"
                        tools:text="副主任医生" />


                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingBottom="@dimen/dp_1"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_6"
                        android:background="@drawable/btn_expert"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="#ffff6060"
                        android:textSize="10sp"
                        android:visibility="visible"
                        tools:text="省级阿萨达啊实打实大大大大大实打实大大大大大大" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_hospitical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff666666"
                        android:textSize="13sp"
                        android:visibility="visible"
                        tools:text="复大肿瘤医院" />


                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_diseasetype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="#ff666666"
                        android:textSize="13sp"
                        tools:text=" 病理科" />



                </LinearLayout>

            </LinearLayout>



            <TextView
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/accept_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:paddingTop="@dimen/dp_4"
                android:text="提醒专家填写"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            </LinearLayout>


        <TextView
            android:visibility="gone"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_10"
            android:background="#fff8f8fa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="肿瘤专病医联体--MDT会诊肺癌团队主审人"
            android:textColor="#ff666666"
            android:textSize="13sp"
            />


        <TextView
            android:id="@+id/tv_expert_advice"
            android:padding="@dimen/dp_10"
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:text="专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容专家建议内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>


    <View style="@style/limit_line" />

    </LinearLayout>



