<?xml version="1.0" encoding="utf-8"?>
<!--底部菜单Bar-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.newdjk.doctor.views.BottomTabRadioButton
        android:id="@+id/rb_tab1"
        style="@style/RadioButtonBottomTab"
        android:checked="true"
        android:layout_marginTop="@dimen/dp_5"
        android:drawableTop="@drawable/home_selectot"
        android:text="芸诊室"
        android:textColor="@color/bottombar_color_theme_gray"
        android:textSize="@dimen/text_size_micro"
        app:drawableHeights="@dimen/dp_22"
        android:drawablePadding="@dimen/dp_4"
        app:drawableWidths="@dimen/dp_22" />


    <com.newdjk.doctor.views.BottomTabRadioButton
        android:id="@+id/rb_tab3"
        android:layout_marginTop="@dimen/dp_5"
        style="@style/RadioButtonBottomTab"
        android:drawableTop="@drawable/message_selectot"
        android:text="患者"
        android:textColor="@color/bottombar_color_theme_gray"
        android:textSize="@dimen/text_size_micro"
        app:drawableHeights="@dimen/dp_22"
        android:drawablePadding="@dimen/dp_4"
        app:drawableWidths="@dimen/dp_22" />
    <com.newdjk.doctor.views.BottomTabRadioButton
        android:id="@+id/rb_tab4"
        android:layout_marginTop="@dimen/dp_5"
        style="@style/RadioButtonBottomTab"
        android:drawableTop="@drawable/personal_selectot"
        android:text="我的"
        android:drawablePadding="@dimen/dp_4"
        android:textColor="@color/bottombar_color_theme_gray"
        android:textSize="@dimen/text_size_micro"
        app:drawableHeights="@dimen/dp_22"
        app:drawableWidths="@dimen/dp_22" />



</LinearLayout>