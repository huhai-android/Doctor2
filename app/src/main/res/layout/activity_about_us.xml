<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_btn">

    <LinearLayout
        style="@style/ll_activity"
        android:background="@color/white">

        <include layout="@layout/layout_titlebar" />


        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_50"
            android:contentDescription="TODO"
            android:src="@mipmap/icon_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="芸医生"
            android:textColor="@color/font_gray_5"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/about_msg_bg"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="客服热线:400-0000-000 "
                    android:textColor="@color/font_gray_5"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="客服邮箱:service@site.com"
                    android:textColor="@color/font_gray_5"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="当前版本：v2.1.1"
                        android:textColor="@color/font_gray_5"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:id="@+id/mBundleID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="BundleID：6"
                        android:textColor="@color/font_gray_5"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:id="@+id/lv_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:visibility="visible"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_update_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前版本已经是最新版本"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/update_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:text="立即升级"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_agreement"
        style="@style/tv_default"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_50"
        android:text="《芸医平台医护人员入驻服务协议》"
        android:textColor="@color/theme"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="@dimen/sp_12"
        android:text="@string/about_copy_right"
        android:textColor="@color/font_gray_5"
        android:textSize="@dimen/sp_10" />

</RelativeLayout>