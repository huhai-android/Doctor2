    <LinearLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:visibility="visible"
                    tools:text="刘付" />


                <TextView

                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    tools:text="副主任医生" />
            </LinearLayout>


            <TextView
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/accept_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:paddingTop="@dimen/dp_4"
                android:text="填写诊疗建议"
                android:textColor="#ff3a66ff"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView

                    android:id="@+id/tv_hospitical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff666666"
                    android:textSize="14sp"
                    android:visibility="visible"
                    tools:text="广东省人民医院dsffffffffffffffffffffffffffffffffffffffffff广东省人民医院dsfffffffffffffffffff" />

                <TextView

                    android:id="@+id/tv_diseasetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#ff666666"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text=" 病理科嘻嘻嘻嘻嘻嘻嘻嘻寻爱上大大大大大大大大大大" />

            </LinearLayout>

            <TextView
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#ff999999"
                android:textSize="14sp"
                android:visibility="visible"
                tools:text="2018-11-04" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
