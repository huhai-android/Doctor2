<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lv_root"
    style="@style/ll_activity">

    <include layout="@layout/layout_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:src="@drawable/doctor_monitor_icon1" />

                <TextView
                    android:id="@+id/tv_check_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.5dp"
                    android:layout_weight="1"
                    android:text="@string/title_custody_report_date"
                    android:textColor="@color/text_doctor_report" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:src="@drawable/doctor_monitor_icon2" />

                <TextView
                    android:id="@+id/tv_check_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.5dp"
                    android:layout_weight="1"
                    android:text="@string/title_custody_report_number"
                    android:textColor="@color/text_doctor_report" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_17">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/name_point"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_25"
                        android:text="@string/age"
                        android:textColor="@color/text_doctor_report" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_17">

                    <TextView
                        android:id="@+id/tv_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/week"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_25"
                        android:text="@string/phone"
                        android:textColor="@color/text_doctor_report" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="@dimen/dp_15"
                    android:background="@color/line"></View>

                <TextView
                    android:id="@+id/tv_check_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_weight="1"
                    android:text="@string/check_duration"
                    android:textColor="@color/text_doctor_report" />

                <TextView
                    android:id="@+id/tv_check_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_weight="1"
                    android:text="@string/check_start_time"
                    android:textColor="@color/text_doctor_report" />

                <TextView
                    android:id="@+id/tv_check_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_23"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_weight="1"
                    android:text="@string/check_end_time"
                    android:textColor="@color/text_doctor_report" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_14"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/doctor_monitor_icon3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_weight="1"
                        android:text="@string/check_report_image"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_check_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="@string/manaul_ncheck"
                        android:textColor="@color/text_doctor_report" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <com.newdjk.doctor.views.PlaydemoView
                    android:id="@+id/playdemoView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_400"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/tv_heart_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/dp_30"
                    android:text="--"
                    android:textColor="@color/theme"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/tv_gongsuo_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="@dimen/dp_30"
                    android:text="--"
                    android:textColor="@color/theme"
                    android:textSize="35sp" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/doctor_monitor_icon4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="@string/check_report_method"
                    android:textColor="@color/text_doctor_report" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="NST评分法"
                    android:textColor="@color/text_doctor_report" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/doctor_monitor_icon4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="评分"
                    android:textColor="@color/text_doctor_report" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_check_bmp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_weight="2"
                        android:text="基线（bpm）"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_check_bmp_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:text="0.0分"
                        android:textColor="@color/text_doctor_report" />

                    <TextView

                        android:id="@+id/tv_reduce_one"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/dp_37"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="－"
                        android:textColor="@color/white"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/et_check_bmp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:gravity="center"
                        android:hint="120"
                        android:inputType="number"
                        android:padding="@dimen/dp_3"
                        android:tag="1"
                        android:text="0"
                        android:textColor="@color/text_doctor_report"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_add_one"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="＋"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_check_bmp_change"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_weight="2"
                        android:text="基线变异(bpm)"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_check_bmp_change_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:text="0.0分"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_reduce_two"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/dp_37"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="－"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_check_bmp_change"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:gravity="center"
                        android:hint="11"
                        android:inputType="number"
                        android:padding="@dimen/dp_3"
                        android:tag="1"
                        android:text="0"
                        android:textColor="@color/text_doctor_report"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_add_two"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="＋"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_check_taidong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_weight="2"
                        android:text="胎动次数(次/20min)"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_check_taidong_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:text="0.0分"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_reduce_five"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/dp_37"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="－"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_check_taidong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:gravity="center"
                        android:hint="1"
                        android:inputType="number"
                        android:padding="@dimen/dp_3"
                        android:tag="1"
                        android:text="0"
                        android:textColor="@color/text_doctor_report"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_add_five"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="＋"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_check_speed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_weight="2"
                        android:text="加速变化(bpm)"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_check_speed_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:text="0.0分"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_reduce_three"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/dp_37"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="－"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_check_speed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:gravity="center"
                        android:hint="10"
                        android:inputType="number"
                        android:padding="@dimen/dp_3"
                        android:tag="1"
                        android:text="0"
                        android:textColor="@color/text_doctor_report"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_add_three"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="＋"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_check_speed_reduce"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_weight="2"
                        android:text="加速时间(s)"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_check_speed_reduce_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:text="0.0分"
                        android:textColor="@color/text_doctor_report" />

                    <TextView
                        android:id="@+id/tv_reduce_four"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/dp_37"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="－"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_check_speed_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:gravity="center"
                        android:hint=">=2"
                        android:inputType="number"
                        android:padding="@dimen/dp_3"
                        android:tag="1"
                        android:text="0"
                        android:textColor="@color/text_doctor_report"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_add_four"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="＋"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"></View>


                <TextView
                    android:id="@+id/tv_check_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="@string/check_report_result_point"
                    android:textColor="@color/text_doctor_report" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/doctor_monitor_icon4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_weight="1"
                        android:text="@string/check_report_result"
                        android:textColor="@color/text_doctor_report" />

                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    tools:listitem="@layout/doctor_report_item">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提示：本分析结果仅供医生参考，医生需结合实际临床修改判读结果或增加医嘱。"
                    android:textColor="@color/text_doctor_report" />

                <EditText
                    android:id="@+id/et_advice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/radiobutton_background_unchecked"
                    android:gravity="start"
                    android:padding="@dimen/dp_10"
                    android:tag="2"
                    android:textColor="@color/black"
                    tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />

                <TextView
                    android:id="@+id/tv_check_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_weight="1"
                    android:text="@string/check_report_sign_name"
                    android:textColor="@color/text_doctor_report" />

                <TextView
                    android:id="@+id/tv_check_doctor_sign_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_23"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_weight="1"
                    android:text="@string/check_report_sign_time"
                    android:textColor="@color/text_doctor_report" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_sign_report"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:text="@string/check_report_sign"
                android:textColor="@color/white" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>
