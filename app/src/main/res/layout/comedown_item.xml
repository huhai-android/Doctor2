<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"

    >

    <!--   <com.newdjk.doctor.views.CircleImageView
           android:id="@+id/avatar"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:src="@drawable/head_deafult" />-->


    <View
        android:background="#F1F1F1"
        android:layout_width="wrap_content"
        android:layout_height="8dp"></View>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff333333"
                android:textSize="16sp"
                tools:text="姓名" />


            <TextView

                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#ff666666"
                android:textSize="14sp"
                tools:text="年龄" />

            <TextView

                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#666666"
                android:textSize="12sp"
                android:visibility="visible"
                tools:text="性别" />
        </LinearLayout>


        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/tv_comedown_time"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:background="@drawable/btn_time"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            tools:text="倒计时" />

    </LinearLayout>


    <LinearLayout
        android:background="#fff3f7ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingRight="@dimen/dp_15"
            android:id="@+id/tv_patient_history"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="13sp"

            android:paddingBottom="@dimen/dp_8"
            tools:text="由于医生出诊时间变更，导致该时段面诊预约被取消，预约金会为您原路退回"
            />
    </LinearLayout>


    <TextView
        android:minHeight="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_16"
        android:id="@+id/tv_patient_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_3"
        tools:text="病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉病情主诉。"
        android:textColor="#ff333333"
        android:textSize="16sp" />
</LinearLayout>
