<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ll_activity">

    <include layout="@layout/layout_titlebar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3F3F3"
            android:orientation="vertical">

            <View style="@style/limit_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

                <TextView
                    android:id="@+id/accepts_switch_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/accepts_switch"
                    android:textColor="@color/plugin_camera_black" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/accepts_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:kswAnimationDuration="300"
                    app:kswBackDrawable="@drawable/ios_back_drawable"
                    app:kswThumbDrawable="@drawable/ios_thumb_selector"
                    app:kswThumbMarginBottom="-8dp"
                    app:kswThumbMarginLeft="-5dp"
                    app:kswThumbMarginRight="-5dp"
                    app:kswThumbMarginTop="-2.5dp"
                    app:kswThumbRangeRatio="1.4" />

            </RelativeLayout>

            <View style="@style/limit_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

                <TextView
                    android:id="@+id/accept_account_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/diagnse_number"
                    android:textColor="@color/plugin_camera_black" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/accept_account"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="number"
                        android:lines="1"
                        android:textColor="@color/color_setting"
                        android:textColorHint="@color/line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_right"
                        android:text="次"
                        android:textColor="@color/color_setting" />
                </LinearLayout>

            </RelativeLayout>

            <View style="@style/limit_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

                <TextView
                    android:id="@+id/consult_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/diagnse_price"
                    android:textColor="@color/plugin_camera_black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/consult_price"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="number|numberDecimal"
                        android:lines="1"
                        android:textColor="@color/color_setting"
                        android:textColorHint="@color/line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_right"
                        android:text="元"
                        android:textColor="@color/color_setting" />
                </LinearLayout>

            </RelativeLayout>


            <View style="@style/limit_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

                <TextView
                    android:id="@+id/consult_discount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/diagnse__discount_price"
                    android:textColor="@color/plugin_camera_black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/consult_discount"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="number|numberDecimal"
                        android:lines="1"
                        android:textColor="@color/color_setting"
                        android:textColorHint="@color/line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_right"
                        android:text="元"
                        android:textColor="@color/color_setting" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/limit_line" />

            <View style="@style/limit_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">

                    <TextView
                        android:id="@+id/tv_switch_advice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="允许推荐"
                        android:textColor="@color/plugin_camera_black" />

                    <com.kyleduo.switchbutton.SwitchButton
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/bu_switch_advice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:kswAnimationDuration="300"
                        app:kswBackDrawable="@drawable/ios_back_drawable"
                        app:kswThumbDrawable="@drawable/ios_thumb_selector"
                        app:kswThumbMarginBottom="-8dp"
                        app:kswThumbMarginLeft="-5dp"
                        app:kswThumbMarginRight="-5dp"
                        app:kswThumbMarginTop="-2.5dp"
                        app:kswThumbRangeRatio="1.4"/>

                </RelativeLayout>





                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/white"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="推荐人服务费"
                        android:textColor="@color/font_gray_2" />

                    <TextView
                        android:id="@+id/tv_fencheng_proportion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="0元"
                        android:textColor="@color/font_gray_2" />

                </RelativeLayout>
            </LinearLayout>

            <View style="@style/limit_line" />

            <LinearLayout
                android:id="@+id/symptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_10">

                <com.newdjk.doctor.views.ItemView
                    android:id="@+id/mFunReport"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    app:RightTVText="编辑"
                    app:SetRightImg="@drawable/ic_right"
                    app:leftTVText="适应病症"
                    app:leftTVTextDrawLeftImg="@mipmap/me_service" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/limit_line1" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyleview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10" />


            </LinearLayout>

            <View style="@style/limit_line" />


            <TextView
                android:id="@+id/save"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_service_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:background="#F9F9FE"
                android:paddingBottom="@dimen/dp_20"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"

                android:text="∷服务介绍∷"
                android:textColor="@color/plugin_camera_black"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:visibility="gone"
                android:id="@+id/tv_price_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#F9F9FE"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/dierzhenliaowenzhen"
                android:textColor="@color/color_setting"
                android:textSize="@dimen/sp_15" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>