<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_activity">

    <include layout="@layout/layout_titlebar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.newdjk.doctor.views.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/patient_default_img" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="就诊人"
                    android:textColor="#FF333333"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="甄志华"
                        android:textColor="#FF666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="女"
                        android:textColor="#FF666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="0岁"
                        android:textColor="#FF666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="86-13425678890"
                    android:textColor="#FF999999"
                    android:textSize="12sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/im_status"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/icon_quxiaoyuyue"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="就诊医院"
                android:textColor="#FF999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_hospitical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#FF666666"
                android:textSize="12sp"
                tools:text="妇幼保健医院（广东省深圳市详细地址）" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="就诊地址"
                android:textColor="#FF999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#FF666666"
                android:textSize="12sp"
                tools:text="妇幼保健医院（广东省深圳市详细地址）" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_4">

            <TextView
                android:id="@+id/tv_appointtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约时间"
                android:textColor="#FF999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#FF666666"
                android:textSize="12sp"
                tools:text="妇幼保健医院（广东省深圳市详细地址）" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_4"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="病情描述"
                android:textColor="#FF999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="妇幼保健医院（广东省深圳市详细地址）"
                android:textColor="#FF666666"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30">

        <LinearLayout
            android:id="@+id/lv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">


            <TextView
                android:id="@+id/tv_status"
                android:layout_width="130dp"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/bg_quxiao_lianxi_mianzhen_enable"
                android:gravity="center"
                android:text="取消预约"
                android:textColor="@color/quxiaoyuyueenable"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">


            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="130dp"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/bg_quxiao_lianxi_mianzhen"
                android:gravity="center"
                android:text="联系患者"
                android:textColor="#FF2C66D3"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

    <TextView

        android:id="@+id/tv_cancel_desc"
        android:layout_width="255dp"
        android:layout_height="17dp"
        android:layout_marginTop="@dimen/dp_10"
        android:text="距本次预约时间不足24小时，所以无法取消预约"
        android:textColor="#FF999999"
        android:textSize="12sp"
        android:visibility="gone"></TextView>
</LinearLayout>