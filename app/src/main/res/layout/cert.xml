<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/activity_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
       <include layout="@layout/layout_titlebar"/>
       <ImageView
           android:scaleType="fitXY"
           android:layout_width="match_parent"
           android:src="@drawable/cert_banner"
           android:layout_height="wrap_content" />
       <com.newdjk.doctor.views.ItemView
           android:id="@+id/my_cert"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"
           app:SetRightImg="@drawable/ic_right"
           app:leftTVText="我的证书"
           app:leftTVTextDrawLeftImg="@drawable/my_cert" />
       <View
           android:layout_width="match_parent"
           android:background="@color/limit_line1"
           android:layout_height="1dp"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"/>
       <com.newdjk.doctor.views.ItemView
           android:id="@+id/find_cert"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"
           app:SetRightImg="@drawable/ic_right"
           app:leftTVText="证书找回"
           app:leftTVTextDrawLeftImg="@drawable/find_cert" />
       <View
           android:layout_width="match_parent"
           android:background="@color/limit_line1"
           android:layout_height="1dp"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"/>
       <com.newdjk.doctor.views.ItemView
           android:id="@+id/reset_password"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"
           app:SetRightImg="@drawable/ic_right"
           app:leftTVText="重置密码"
           app:leftTVTextDrawLeftImg="@drawable/reset_password" />
       <View
           android:layout_width="match_parent"
           android:background="@color/limit_line1"
           android:layout_height="1dp"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"/>
       <com.newdjk.doctor.views.ItemView
           android:id="@+id/cert_manager"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"
           app:SetRightImg="@drawable/ic_right"
           app:leftTVText="签章管理"
           app:leftTVTextDrawLeftImg="@drawable/cert_manager" />
       <View
           android:layout_width="match_parent"
           android:background="@color/limit_line1"
           android:layout_height="1dp"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"/>
       <com.newdjk.doctor.views.ItemView
           android:id="@+id/cert_update"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"
           app:SetRightImg="@drawable/ic_right"
           app:leftTVText="证书更新"
           app:leftTVTextDrawLeftImg="@drawable/cert_update" />


       <RelativeLayout
           android:layout_marginTop="@dimen/dp_15"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginRight="@dimen/dp_10"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/tv_desc_sign"
                  android:textColor="@color/colorPrimary"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="了解电子签名"
                  />

              <TextView
                  android:id="@+id/tv_help_sign"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/colorPrimary"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="帮助"
                  />
       </RelativeLayout>
</LinearLayout>
