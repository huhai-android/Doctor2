<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_activity">

    <include layout="@layout/layout_titlebar" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">


                <View style="@style/limit_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical">

                    <com.newdjk.doctor.views.CircleImageView
                        android:id="@+id/civImg"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="@dimen/dp_10"
                        android:src="@drawable/doctor_default_img" />


                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        tools:text="姓名" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textColor="#ff666666"
                        android:textSize="14sp"
                        tools:text="女" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textColor="#ff666666"
                        android:textSize="14sp"
                        tools:text="39岁" />
                </LinearLayout>

                <View style="@style/limit_line" />


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="疾病"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_jibing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="暂无内容"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="病情主诉"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_bingqing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="暂无内容"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="患病多久"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_huanbing_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="暂无内容"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="已就诊医院及科室"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_jiuzhen_keshi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="暂无内容"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="过敏史"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_guominshi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="暂无内容"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="当前使用药物"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_yaopin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="暂无内容"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="既往史"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_jiwangshi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="暂无内容"
                    android:textColor="#ff999999"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="检查资料"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_check_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_90"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/shape_check_document"
                    android:paddingBottom="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_4"
                    android:text="查看图片资料"
                    android:textColor="#ff3a66ff"
                    android:textSize="14sp" />


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/lv_accept_refuse"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="visible">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_accept"
                    style="@style/btn_default"
                    android:layout_width="155dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_accept"
                    android:gravity="center"
                    android:text="接 诊"
                    android:textColor="@color/font_white_gray"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lv_refuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_refuse"
                    android:layout_width="155dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_refuse"
                    android:gravity="center"
                    android:minHeight="@dimen/dp_40"
                    android:text="退 诊"
                    android:textColor="@color/theme"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>




        </LinearLayout>
    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

