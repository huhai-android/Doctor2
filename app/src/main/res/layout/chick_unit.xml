<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chick_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_15"
                android:text="asdadad"
                android:textColor="@color/plugin_camera_black"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/shape_send_type"
                    android:padding="@dimen/dp_2"
                    android:text="药房自取"
                    android:textColor="#FFA416"
                    android:textSize="@dimen/sp_10"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/shape_send_type"
                    android:padding="@dimen/dp_2"
                    android:text="配送到家"
                    android:textColor="#FFA416"
                    android:textSize="@dimen/sp_10"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_type3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_send_type"
                    android:padding="@dimen/dp_2"
                    android:text="院内闪送"
                    android:textColor="#FFA416"
                    android:textSize="@dimen/sp_10"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_service_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp_11"
                android:text="服务区域"
                android:textColor="#9D9D9D"
                android:textSize="@dimen/sp_10" />


        </LinearLayout>

        <CheckBox
            android:id="@+id/select_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:button="@drawable/checkbox_default2_selectot"
            android:clickable="false"
            android:textColor="@color/plugin_camera_black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/font_gray_3" />
</LinearLayout>
