<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <com.newdjk.doctor.views.CircleImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/im_appicon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
       android:layout_marginTop="@dimen/dp_5"
        android:src="@drawable/doctor_default_img" />
    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_5"
        android:text="张三丰"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <com.newdjk.doctor.views.ButtonView
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/tv_authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_3"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="已认证"
        android:textColor="@color/huang"
        app:radius="@dimen/dp_20"
        app:solid_color="@color/white"
        app:stroke="@dimen/dp_1"
        app:stroke_color="@color/huang" />
</LinearLayout>
