    <!--个人中心itemview-->
    <declare-styleable name="ItemView">
        <attr name="leftTVText" format="string" />
        <attr name="leftTVTextDrawLeftImg" format="reference" />
        <attr name="RightTVText" format="string" />
        <attr name="RightImgShow" format="boolean" />
        <attr name="ProgressIsShow" format="boolean" />
        <attr name="SetRightImg" format="reference" />
        <attr name="ProgressMaxVal" format="integer" />
        <attr name="SetRightTextColor" format="color" />
        <attr name="SetLeftTextColor" format="color" />
        <attr name="SetRightTextIcom" format="reference" />
    </declare-styleable>

    <!--分割线-->
    <style name="limit_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/limit_line1</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <color name="limit_line1">#dddddd</color>
    //popupwindow

    <style name="popupwindow_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!--设置tabLayout字体大小-->


    <declare-styleable name="RoundImageView">
        <attr name="leftTopRadius" format="dimension" />
        <attr name="leftBottomRadius" format="dimension" />
        <attr name="rightBottomRadius" format="dimension" />
        <attr name="rightTopRadius" format="dimension" />
        <attr name="Radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FlowLayout_LayoutParams">
        <attr name="layout_newLine" format="boolean" />
        <attr name="layout_weight" format="float" />
        <attr name="android:layout_gravity" />
    </declare-styleable>


    <declare-styleable name="FlowLayout">
        <attr name="android:orientation" />
        <attr name="layoutDirection" format="enum">
            <enum name="ltr" value="0" />
            <enum name="rtl" value="1" />
        </attr>
        <attr name="debugDraw" format="boolean" />
        <attr name="weightDefault" format="float" />
        <attr name="android:gravity" />
    </declare-styleable>


    <!--更改alertdialog按钮自动变成大写的方法-->
    <style name="DialogButton" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="textAllCaps">false</item>

    </style>


    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="dialogstyle">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/gray</item>
        <item name="android:colorControlNormal">@color/alpha_3</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Immense" parent="AppTheme">
        <!-- api 21 -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">#00000000</item>
        <!-- api 23 -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>
